@import "../../node_modules/jeet/styl"

shadow-color = #d0d0d0
shadow-smoth = 10px
shadow-down = 5px
shadow-left = 5px

font-color = #0e0e0e
font-hover = #FF2F2F
font-article-link = #fff
font-date-color = #d0d0d0

border-color = #ddd

second-color = rgba(255, 47, 47, 0.66)
main-background = #efefef
boxes-background = #fff

box-shadow($shadow-left = shadow-left, $shadow-down = shadow-down)
  -webkit-box-shadow: $shadow-left $shadow-down shadow-smoth shadow-color
  -moz-box-shadow: $shadow-left $shadow-down shadow-smoth shadow-color
  box-shadow: $shadow-left $shadow-down shadow-smoth shadow-color

text-shadow()
  -webkit-text-shadow: shadow-left shadow-down shadow-smoth shadow-color
  -moz-text-shadow: shadow-left shadow-down shadow-smoth shadow-color
  text-shadow: shadow-left shadow-down shadow-smoth shadow-color

vertical-center()
  position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);

border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

html, body
  height: 100%

html
  font-size: 62.5%

body
  background-color: main-background
  font-family: 'Lato', sans-serif
  margin: 0
  color: font-color

.container
  margin: 0 auto
  width: 1000px

.body-header
  background-color: boxes-background
  height: 120px
  padding: 10px 20px
  margin-bottom: 30px
  box-shadow()

  .img
    column(1/4)
    vertical-center()
    figure
      margin: 0
      img
        width: 120px
        box-shadow(5px, 5px)

  .title
    column(2/4)
    vertical-center()
    text-align: center
    h1
      font-size: 2.4rem
      color: font-color
      text-shadow()

      span
        color: second-color
    h2
      text-shadow()

  .links
    vertical-center()
    column(1/4)
    text-align: right
    text-shadow()
    a
      display:block
      font-size: 1.4rem
      color: font-color
      text-decoration: none
      margin-right: 10px
      i
        margin-right: 5px

      &:hover
        color: font-hover

.content-container
  margin: 0 auto
  min-height: 100%
  column(4/4)
  position: relative

main
  column(3/4)

  .breadcrumbs
    background-color: boxes-background
    box-shadow()
    padding: 10px
    font-size: 1.2rem
    color: font-date-color
    a
      text-decoration: none
      color: second-color
      &:hover
        color: darken(font-date-color, 30%)
    span
        color: darken(font-date-color, 30%)

  section
    article
      background-color: boxes-background
      box-shadow()
      margin-top: 30px
      padding: 10px

      figure
        float: left
        margin: 10px
        img
          width: 120px
          border-bottom: solid 1px border-color
          border-top: solid 1px border-color
          padding: 10px
          border-radius(50px)

      header
        border-bottom: solid 1px border-color
        padding: 10px
        font-size: 2.4rem
        color: second-color
        font-weight: bold
        text-shadow()
        a
          text-decoration: none
          color: second-color
          &:hover
            color: darken(font-date-color, 30%)

      .content
        padding: 10px
        color: font-color
        text-shadow()
        font-size: 1.8rem
        h2
          font-size: 1.8rem

      footer
        height: 60px
        margin-top: 20px
        .links
          column(4/4)
          div
            float: left
            margin: 15px 10px
            color: darken(font-date-color, 30%)
            font-size: 1.2rem
            a
              text-decoration: none
              color: second-color
              &:hover
                color: darken(font-date-color, 30%)

        .date
          column(1/4)
          span(3/4)
          color: font-date-color
          text-transform: uppercase
          font-size: 1.6rem
          font-weight: bold
          padding-left: 10px
          span
            color: darken(font-date-color, 30%)

        .link
          column(1/4)
          text-align: right
          a
            color: font-article-link
            background-color: second-color
            height: 20px
            padding: 5px 10px
            text-decoration: none
            width: 90px
            box-shadow()
            font-size: 1.4rem
            font-weight: bold

aside
  background-color: boxes-background
  box-shadow()
  column(1/4)
  height: 100%
  position: absolute
  right: 0
  nav
    padding: 10px

  h3
    font-size: 1.8 rem
    font-weight: bold

  ul
    list-style-type: none
    a
      font-size: 1.6 rem
      text-decoration: none
      color: second-color
      &:hover
        color: darken(font-date-color, 30%)

      
.main-footer
  background-color: boxes-background
  height: 35px
  box-shadow()
  margin-top: 30px
  column(4/4)
  span
    color: second-color

  section
    padding: 10px 20px
